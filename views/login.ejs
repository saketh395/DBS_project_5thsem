<%- include('partials/header'); -%>



<div class="d-flex justify-content-center align-items-center maindiv color-grey">
  <div class="jumbotron centered">
    <div class="container text-center">

      <h1 class="heading text-arsenic"><%= pageTitle%></h1>
      <hr style="background-color: #3F3E42; height: 2px; opacity: 1; margin-top: 50px; margin-bottom: 50px">

      <%if (userType === 'admin'){ %>

      <p class="par text-arsenic" style="font-size: 1.5rem">Enter Username and Password</p>
      <div class="card">
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="form-group">

              <input type="text" class="form-control margin-tb" name="admin_user" placeholder="Username">
            </div>
            <div class="form-group">

              <input type="password" class="form-control margin-tb" name="admin_pass" placeholder="Password">
            </div>
            <button type="submit" style="width:100%" class="btn color-green">Login</button>
          </form>

        </div>
      </div>

      <%  } else if ( userType==='student'){ %>

      <p class="par text-arsenic" style="font-size: 1.5rem">Enter USN and DOB</p>
      <div class="card">
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="form-group">

              <input type="text" class="form-control margin-tb" name="student_usn" placeholder="USN">
            </div>
            <div class="form-group">

              <input type="date" class="form-control margin-tb" name="student_pass">
            </div>
            <button type="submit" style="width:100%" class="btn color-green">Login</button>
          </form>

        </div>
      </div>

      <%  }else if ( userType==='company'){%>

      <p class="par text-arsenic" style="font-size: 1.5rem">Enter Username and Password</p>
      <div class="card">
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="form-group">

              <input type="text" class="form-control margin-tb" name="company_user" placeholder="Username">
            </div>
            <div class="form-group">

              <input type="password" class="form-control margin-tb" name="company_pass" placeholder="Password">
            </div>
            <button type="submit" style="width:100%" class="btn color-green">Login</button>
          </form>

        </div>
      </div>

      <%  }%>

    </div>
  </div>

</div>

<%- include('partials/footer'); -%>
